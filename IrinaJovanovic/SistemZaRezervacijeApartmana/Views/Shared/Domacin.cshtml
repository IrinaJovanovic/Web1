        <div id="SviKomentari" class="tabcontent">
            <h4>Odaberite komentare koje zelite da se prikazuju na Vasim apartmanima</h4>
            <form action="/Domacin/PrikaziKomentApart" method="post">
            <select name="komentar">
                @{
                    foreach (SistemZaRezervacijeApartmana.Models.KomentarZaApartman kom in SistemZaRezervacijeApartmana.Models.Database.komentariZaApartmane.Values)
                    {
                        foreach (SistemZaRezervacijeApartmana.Models.Apartman ap in SistemZaRezervacijeApartmana.Models.Database.domacini[Model.KorisnickoIme].ApartmaniZaIzdavanje)
                        {
                            if (kom.Apartman.Lokacija.Adresa.Ulica == ap.Lokacija.Adresa.Ulica && kom.Apartman.Lokacija.Adresa.Broj == ap.Lokacija.Adresa.Broj && kom.Apartman.Lokacija.Adresa.Grad == ap.Lokacija.Adresa.Grad && ap.Status.ToString() == "AKTIVAN" && !ap.IsDeleted && !kom.Odobren)
                            {
                                <option value="@kom.Id">@kom.Gost.KorisnickoIme -@ap.Id| @kom.Apartman.Lokacija.Adresa.Ulica @kom.Apartman.Lokacija.Adresa.Broj @kom.Apartman.Lokacija.Adresa.Grad |@kom.Tekst |@kom.OcenaApartmana.ToString()</option>
                            }
                        }

                    }
                }
            </select>
            <br />
            <input type="submit" value="Prikazi" />
            </form>
